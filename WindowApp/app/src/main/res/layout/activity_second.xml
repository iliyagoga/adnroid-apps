<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutSecond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView android:id="@+id/textViewName"   android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/textViewAge"   android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/textViewGender"   android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnChangeBackground" android:layout_height="wrap_content"  android:layout_width="wrap_content"
            android:text="Сменить фон" />

        <Button
            android:id="@+id/btnGoToNext" android:layout_height="wrap_content"  android:layout_width="wrap_content"
            android:text="Перейти" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>