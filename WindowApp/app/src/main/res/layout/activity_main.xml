<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите имя" />

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите возраст"
            android:inputType="number" />

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioMale"
                android:text="М"  android:layout_height="wrap_content"  android:layout_width="wrap_content"/>

            <RadioButton
                android:id="@+id/radioFemale" android:layout_height="wrap_content"  android:layout_width="wrap_content"
                android:text="Ж" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSubmit" android:layout_height="wrap_content"  android:layout_width="wrap_content"
            android:text="Отправить" />

        <Button
            android:id="@+id/btnReset" android:layout_height="wrap_content"  android:layout_width="wrap_content"
            android:text="Сбросить" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>